<LinearLayout
    android:id="@+id/chat_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">

	    <ImageView
	        android:id="@+id/chat_item_image"
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:layout_margin="5dp"
	        android:padding="1dp"
	        android:background="#7FC2C6"
	        android:src="@drawable/icon_noimage" />
	    
	    <TextView
	        android:id="@+id/chat_item_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:textSize="12sp"
	        android:text="member"/>
    
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
	    
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="18dp"
	        android:layout_gravity="left"
	      	android:textSize="15sp"
	      	android:textColor="#7FC2C6"
	        android:text="â—€" />
        
        <TextView
	        android:id="@+id/chat_item_voice"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:maxWidth="250dp"
	        android:padding="10dp"
	        android:layout_marginRight="3dp"
	        android:layout_marginTop="15dp"
	        android:layout_marginLeft="8dp"
	        android:background="@drawable/balloon_shape_member"
	        android:text="text" />
    </FrameLayout>
    
    <TextView
		android:id="@+id/chat_item_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="15dp"
	    android:textSize="9sp"
	   	android:text="time" />
   
</LinearLayout>